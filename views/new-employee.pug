extends layout

block content
  h2 Add Employee
  form(action="/add", method="POST")
    .form-group
      label(for="e_id") Employee ID:
      input#e_id(type="text", name="e_id", placeholder="Enter Employee ID", required)

    .form-group
      label(for="e_name") Name:
      input#e_name(type="text", name="e_name", placeholder="Enter Full Name", required)

    .form-group
      label(for="e_email") Email:
      input#e_email(type="email", name="e_email", placeholder="Enter Email Address", required)

    .form-group
      label(for="e_mobileno") Mobile No:
      input#e_mobileno(type="text", name="e_mobileno", placeholder="Enter Mobile Number", required)

    .form-group
      label(for="e_gender") Gender:
      select#e_gender(name="e_gender", required)
        option(value="", disabled selected) Select Gender
        option(value="Male") Male
        option(value="Female") Female
        option(value="Other") Other

    .form-group
      label(for="e_dept") Department:
      input#e_dept(type="text", name="e_dept", placeholder="Enter Department", required)

    .form-group
      label(for="e_location") Location:
      input#e_location(type="text", name="e_location", placeholder="Enter Location", required)

